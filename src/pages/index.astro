---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import NewsCard from '../components/NewsCard.astro';
import EventCard from '../components/EventCard.astro';

import { getAllHomepageData } from '../pages/api/data.js';
export const prerender = false;

// Fonction pour remplacer les valeurs nulles
function sanitizeData(data, numericFields = []) {
  return data.map(item => {
    const sanitized = { ...item };
    Object.keys(sanitized).forEach(key => {
      if (sanitized[key] === null || sanitized[key] === undefined) {
        sanitized[key] = numericFields.includes(key) ? 0 : '';
      }
    });
    return sanitized;
  });
}

let latestNews = [];
let upcomingEvents = [];
let formations = [];
let error = null;

try {
  const { articles, events, formations: dbFormations } = await getAllHomepageData();
  latestNews = sanitizeData(articles, ['publish_date']);
  upcomingEvents = sanitizeData(events, ['date', 'time']);
  formations = sanitizeData(dbFormations, ['students']);
} catch (err) {
  error = err.message;
}
