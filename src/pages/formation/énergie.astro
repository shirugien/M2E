---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';

const programs = [
  {
    title: "Génie Énergétique",
    level: "Diplôme d'ingénieur",
    duration: "3 ans",
    description: "Formation d'excellence en conception et optimisation des systèmes énergétiques.",
    modules: [
      "Thermodynamique avancée",
      "Énergies renouvelables",
      "Smart grids",
      "Efficacité énergétique",
      "Gestion de projets énergétiques"
    ]
  },
  {
    title: "Master Énergies Renouvelables",
    level: "Master",
    duration: "2 ans",
    description: "Spécialisation dans les énergies renouvelables et leur intégration.",
    modules: [
      "Énergie solaire",
      "Énergie éolienne",
      "Stockage d'énergie",
      "Réseaux intelligents",
      "Transition énergétique"
    ]
  }
];

const careers = [
  "Ingénieur en efficacité énergétique",
  "Chef de projet énergies renouvelables",
  "Consultant en transition énergétique",
  "Responsable R&D en énergie",
  "Expert en smart grids"
];
---

<Layout 
  title="Formation en Énergie"
  description="Découvrez nos formations d'excellence dans le domaine de l'énergie et de la transition énergétique."
>
  <Hero
    title="Formation en Énergie"
    subtitle="Former les experts de la transition énergétique"
    background="https://images.pexels.com/photos/2280571/pexels-photo-2280571.jpeg"
    height="medium"
  />

  <section class="section bg-white">
    <div class="container">
      <h2 class="text-center mb-12">Nos programmes</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {programs.map(program => (
          <div class="card p-6">
            <h3 class="text-xl font-bold mb-2">{program.title}</h3>
            <div class="flex gap-4 text-sm text-secondary-600 mb-4">
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                {program.level}
              </span>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                {program.duration}
              </span>
            </div>
            <p class="text-secondary-600 mb-6">{program.description}</p>
            <div class="mb-6">
              <h4 class="font-semibold mb-2">Modules principaux :</h4>
              <ul class="space-y-2">
                {program.modules.map(module => (
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    {module}
                  </li>
                ))}
              </ul>
            </div>
            <a href={`/formation/energie/${program.title.toLowerCase().replace(/ /g, '-')}`} class="btn btn-primary w-full">
              Détails de la formation
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="mb-6">Débouchés professionnels</h2>
          <p class="text-lg text-secondary-700 mb-6">
            Nos formations en énergie ouvrent la voie à des carrières passionnantes dans des secteurs en pleine expansion.
          </p>
          <ul class="space-y-4">
            {careers.map(career => (
              <li class="flex items-center">
                <svg class="w-6 h-6 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                {career}
              </li>
            ))}
          </ul>
        </div>
        <div class="relative">
          <img 
            src="https://images.pexels.com/photos/356036/pexels-photo-356036.jpeg"
            alt="Professionnels de l'énergie"
            class="rounded-lg shadow-lg"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="mb-6">Prêt à nous rejoindre ?</h2>
        <p class="text-lg text-secondary-700 mb-8">
          Découvrez comment intégrer nos formations en énergie et participez à la transition énergétique.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/admission" class="btn btn-primary">
            Candidater
          </a>
          <a href="/contact" class="btn btn-outline">
            Nous contacter
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>