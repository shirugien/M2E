---
import Layout from '../../../layouts/Layout.astro';
export const prerender = false;

// Récupération des événements depuis l'API
let events = [];
let error = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/events`);
  const data = await response.json();
  if (data.success) {
    events = data.events;
  } else {
    error = data.error;
  }
} catch (err) {
  error = err.message;
}
---

<Layout title="Gestion des événements - Administration">
  <div class="min-h-screen bg-gray-50">
    <!-- Header Admin -->
    <header class="bg-white shadow-sm border-b">
      <div class="container py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <a href="/admin" class="text-secondary-600 hover:text-primary-600">← Retour</a>
            <h1 class="text-2xl font-bold text-primary-800">Gestion des événements</h1>
          </div>
          <a href="/admin/evenements/nouveau" class="btn btn-primary">Nouvel événement</a>
        </div>
      </div>
    </header>

    <div class="container py-8">
      <!-- Filtres -->
      <div class="bg-white p-6 rounded-lg shadow-soft mb-6">
        <div class="flex flex-wrap gap-4 items-center">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Période</label>
            <select class="border border-gray-300 rounded-md px-3 py-2">
              <option>Tous</option>
              <option>À venir</option>
              <option>En cours</option>
              <option>Passés</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Catégorie</label>
            <select class="border border-gray-300 rounded-md px-3 py-2">
              <option>Toutes</option>
              <option>Conférence</option>
              <option>Compétition</option>
              <option>Formation</option>
              <option>Culturel</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Recherche</label>
            <input type="text" placeholder="Nom de l'événement..." class="border border-gray-300 rounded-md px-3 py-2">
          </div>
          <div class="mt-6">
            <button class="btn btn-outline">Filtrer</button>
          </div>
        </div>
      </div>

      <!-- Liste des événements -->
      <div class="bg-white rounded-lg shadow-soft overflow-hidden">
        {error ? (
          <div class="p-8 text-center text-red-600">
            <p>Erreur lors du chargement des événements : {error}</p>
          </div>
        ) : events.length === 0 ? (
          <div class="p-8 text-center text-gray-600">
            <p>Aucun événement trouvé.</p>
          </div>
        ) : (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Événement
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date & Heure
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Lieu
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Statut
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {events.map(event => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div>
                      <div class="text-sm font-medium text-gray-900">{event.title}</div>
                      <div class="text-sm text-gray-500">{event.category || 'Non catégorisé'}</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      {new Date(event.date).toLocaleDateString('fr-FR')}
                    </div>
                    <div class="text-sm text-gray-500">{event.time || 'Non spécifié'}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {event.location || 'Non spécifié'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                      event.status === 'published' 
                        ? 'bg-green-100 text-green-800' 
                        : 'bg-yellow-100 text-yellow-800'
                    }`}>
                      {event.status === 'published' ? 'Publié' : 'Brouillon'}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <a href={`/admin/evenements/modifier/${event.id}`} class="text-indigo-600 hover:text-indigo-900">
                      Modifier
                    </a>
                    <a href={`/evenements/childEvent/${event.title.toLowerCase().replace(/[^a-z0-9]+/g, '-')}`} class="text-green-600 hover:text-green-900" target="_blank">
                      Voir
                    </a>
                    <button class="text-red-600 hover:text-red-900" onclick={`deleteEvent(${event.id})`}>
                      Supprimer
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        )}
      </div>
    </div>
  </div>

  <script>
    async function deleteEvent(id) {
      if (!confirm('Êtes-vous sûr de vouloir supprimer cet événement ?')) {
        return;
      }

      try {
        const response = await fetch('/api/events', {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ id })
        });

        const data = await response.json();
        
        if (data.success) {
          alert('Événement supprimé avec succès');
          window.location.reload();
        } else {
          alert('Erreur lors de la suppression : ' + data.message);
        }
      } catch (error) {
        console.error('Erreur:', error);
        alert('Erreur lors de la suppression de l\'événement');
      }
    }
  </script>
</Layout>