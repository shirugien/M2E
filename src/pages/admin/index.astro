---
import Layout from '../../layouts/Layout.astro';

const stats = {
  articles: 12,
  events: 8,
  formations: 7,
  contacts: 25
};
---

<Layout title="Administration - M2E Polytech">
  <div class="min-h-screen bg-gray-50">
    <!-- Header Admin -->
    <header class="bg-white shadow-sm border-b">
      <div class="container py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <img src="/assets/img/logo.png" alt="M2E Polytech" class="h-8" />
            <h1 class="text-2xl font-bold text-primary-800">Administration</h1>
          </div>
          <div class="flex items-center space-x-4">
            <a href="/" class="text-secondary-600 hover:text-primary-600">Voir le site</a>
            <button class="btn btn-outline">Déconnexion</button>
          </div>
        </div>
      </div>
    </header>

    <div class="container py-8">
      <!-- Statistiques -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900">{stats.articles}</p>
              <p class="text-gray-600">Articles</p>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center">
            <div class="bg-green-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900">{stats.events}</p>
              <p class="text-gray-600">Événements</p>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center">
            <div class="bg-purple-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900">{stats.formations}</p>
              <p class="text-gray-600">Formations</p>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center">
            <div class="bg-orange-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900">{stats.contacts}</p>
              <p class="text-gray-600">Messages</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Menu principal -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Gestion des actualités -->
        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center mb-4">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold">Actualités</h2>
          </div>
          <p class="text-gray-600 mb-4">Gérer les articles et actualités du site</p>
          <div class="space-y-2">
            <a href="/admin/actualites" class="block w-full btn btn-primary">Gérer les actualités</a>
            <a href="/admin/actualites/nouveau" class="block w-full btn btn-outline">Nouvel article</a>
          </div>
        </div>

        <!-- Gestion des événements -->
        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center mb-4">
            <div class="bg-green-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold">Événements</h2>
          </div>
          <p class="text-gray-600 mb-4">Gérer le calendrier des événements</p>
          <div class="space-y-2">
            <a href="/admin/evenements" class="block w-full btn btn-primary">Gérer les événements</a>
            <a href="/admin/evenements/nouveau" class="block w-full btn btn-outline">Nouvel événement</a>
          </div>
        </div>

        <!-- Gestion des formations -->
        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center mb-4">
            <div class="bg-purple-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold">Formations</h2>
          </div>
          <p class="text-gray-600 mb-4">Gérer le catalogue des formations</p>
          <div class="space-y-2">
            <a href="/admin/formations" class="block w-full btn btn-primary">Gérer les formations</a>
            <a href="/admin/formations/nouvelle" class="block w-full btn btn-outline">Nouvelle formation</a>
          </div>
        </div>

        <!-- Gestion des contacts -->
        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center mb-4">
            <div class="bg-orange-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold">Messages</h2>
          </div>
          <p class="text-gray-600 mb-4">Consulter les messages de contact</p>
          <div class="space-y-2">
            <a href="/admin/contacts" class="block w-full btn btn-primary">Voir les messages</a>
          </div>
        </div>

        <!-- Gestion des utilisateurs -->
        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center mb-4">
            <div class="bg-red-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold">Utilisateurs</h2>
          </div>
          <p class="text-gray-600 mb-4">Gérer les comptes administrateurs</p>
          <div class="space-y-2">
            <a href="/admin/utilisateurs" class="block w-full btn btn-primary">Gérer les utilisateurs</a>
          </div>
        </div>

        <!-- Paramètres du site -->
        <div class="bg-white p-6 rounded-lg shadow-soft">
          <div class="flex items-center mb-4">
            <div class="bg-gray-100 p-3 rounded-full mr-4">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold">Paramètres</h2>
          </div>
          <p class="text-gray-600 mb-4">Configuration générale du site</p>
          <div class="space-y-2">
            <a href="/admin/parametres" class="block w-full btn btn-primary">Paramètres</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>