---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import SecureForm from '../components/SecureForm.astro';

---

<Layout 
  title="Contact"
  description="Contactez M2E Polytech pour toute question concernant nos formations, l'admission ou la vie étudiante."
>
  <Hero
    title="Contact"
    subtitle="Nous sommes à votre écoute pour répondre à toutes vos questions."
    height="small"
  />

  <section class="section bg-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="mb-6">Formulaire de contact</h2>
          <SecureForm id="contact-form" action="/api/contact" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nom complet *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                maxlength="100"
                pattern="[a-zA-ZÀ-ÿ\s\-']+"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                maxlength="254"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Sujet *</label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                maxlength="200"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message *</label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                maxlength="2000"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              ></textarea>
            </div>

            <div>
              <button
                type="submit"
                class="btn btn-primary w-full"
              >
                Envoyer le message
              </button>
            </div>
          </SecureForm>
        </div>

        <div>
          <h2 class="mb-6">Informations de contact</h2>
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-primary-100 rounded-full p-3 mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-primary-800 mb-1">Adresse</h3>
                <p class="text-secondary-600">
                  Campus Scientifique<br>
                  Quartier Digangali, 9ᵉᵐᵉ Arrond, N'djamena Chad
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-primary-100 rounded-full p-3 mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-primary-800 mb-1">Email</h3>
                <p class="text-secondary-600">
                  <a href="mailto:contact@m2epolytech.fr">m2e.ecole.polytech@gmail.com</a>
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-primary-100 rounded-full p-3 mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-primary-800 mb-1">Téléphone</h3>
                <p class="text-secondary-600">
                  <a href="tel:+23566308815">+235 66 30 88 15</a>
                </p>
              </div>
            </div>

            <div class="mt-8">
              <h3 class="text-xl font-bold text-primary-800 mb-4">Horaires d'ouverture</h3>
              <ul class="space-y-2 text-secondary-600">
                <li class="flex justify-between">
                  <span>Lundi - Vendredi</span>
                  <span>8h30 - 17h30</span>
                </li>
                <li class="flex justify-between">
                  <span>Samedi - Dimanche</span>
                  <span>Fermé</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { supabase } from '../lib/supabase';
  import { sanitizeFormData, sanitizeEmail, limitStringLength, validateSqlInput } from '../utils/sanitize';

  const form = document.getElementById('contact-form');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    try {
      const formData = new FormData(e.target as HTMLFormElement);
      const rawData = Object.fromEntries(formData);
      
      // Sanitisation des données
      const sanitizedData = sanitizeFormData(rawData);
      
      // Validations spécifiques
      sanitizedData.email = sanitizeEmail(sanitizedData.email as string);
      sanitizedData.name = limitStringLength(sanitizedData.name as string, 100);
      sanitizedData.subject = limitStringLength(sanitizedData.subject as string, 200);
      sanitizedData.message = limitStringLength(sanitizedData.message as string, 2000);
      
      // Validation contre les injections SQL
      for (const [key, value] of Object.entries(sanitizedData)) {
        if (typeof value === 'string' && !validateSqlInput(value)) {
          throw new Error('Données invalides détectées');
        }
      }

      const { error } = await supabase
        .from('contact_submissions')
        .insert([{
          name: sanitizedData.name,
          email: sanitizedData.email,
          subject: sanitizedData.subject,
          message: sanitizedData.message
        }]);

      if (error) throw error;

      alert('Votre message a été envoyé avec succès !');
      (e.target as HTMLFormElement).reset();
    } catch (error) {
      console.error('Error:', error);
      alert('Une erreur est survenue. Veuillez vérifier vos données et réessayer.');
    }
  });
</script>
