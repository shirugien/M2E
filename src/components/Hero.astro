---
interface Props {
  title: string;
  subtitle?: string;
  background?: string;
  height?: 'small' | 'medium' | 'large';
}

// Import de l'image par d√©faut
import defaultHero from '../../public/assets/img/herro.png';

const { 
  title, 
  subtitle, 
  background = 'assets/img/herro.png' , 
  height = 'medium'
} = Astro.props;

const bgImage = background ?? defaultHero;

const heightClass = {
  small: 'h-[300px]',
  medium: 'h-[400px] md:h-[500px]',
  large: 'h-[500px] md:h-[600px]'
}[height];
---

<div class={`relative ${heightClass} bg-primary-800 overflow-hidden`}>
  <div class="absolute inset-0">
    <img 
      src={bgImage} 
      alt="" 
      class="w-full h-full object-cover opacity-30"
    />
  </div>
  <div class="absolute inset-0 bg-gradient-to-r from-primary-900/80 to-primary-800/50"></div>
  <div class="relative h-full container flex flex-col justify-center">
    <h1 class="text-white max-w-6xl text-center">{title}</h1>
    {subtitle && <p class="text-xl md:text-2xl text-white/90 max-w-6xl mt-4 text-center">{subtitle}</p>}
  </div>
</div>