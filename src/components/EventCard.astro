---
interface Props {
  title: string;
  date: string;
  time: string;
  location: string;
  description: string;
  url: string;
  category?: string;
}

const { title, date, time, location, description, url, category } = Astro.props;
---

<article class="card h-full flex flex-col transition-all duration-300 hover:shadow-lg">
  <div class="flex items-center border-b border-gray-100 p-5">
    <div class="flex flex-col items-center justify-center bg-primary-50 text-primary-800 p-3 rounded-lg mr-4">
      <span class="text-xs font-medium uppercase">
        {new Date(date).toLocaleDateString('fr-FR', { month: 'short' })}
      </span>
      <span class="text-2xl font-bold">
        {new Date(date).toLocaleDateString('fr-FR', { day: 'numeric' })}
      </span>
    </div>
    <div>
      <h3 class="text-xl font-semibold text-primary-800">
        <a href={url} class="hover:text-primary-600 transition-colors">
          {title}
        </a>
      </h3>
      <div class="flex flex-wrap mt-2 text-secondary-600 text-sm">
        <div class="flex items-center mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>{time}</span>
        </div>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{location}</span>
        </div>
      </div>
    </div>
  </div>
  <div class="p-5 flex-grow">
    <p class="text-secondary-600 mb-4">{description}</p>
    <div class="flex justify-between items-center">
      {category && (
        <span class="bg-primary-100 text-primary-800 text-xs font-medium px-2.5 py-1 rounded">
          {category}
        </span>
      )}
      <a href={url} class="text-primary-600 font-medium inline-flex items-center hover:text-primary-700 transition-colors">
        Plus d'infos
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</article>